<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#0027FF"
>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="325dp"
                android:layout_height="380dp"
                tools:context=".MainActivity"
                android:background="@drawable/cuadro_fondo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
        >
                <TextView
                        android:layout_marginTop="30dp"
                        android:text="Ciclo de vida"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:background="@color/cuadrosTexto"
                        android:textColor="#000000"
                        android:id="@+id/textoSuperior"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/guideline4"
                        app:layout_constraintEnd_toStartOf="@id/guideline5"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        android:layout_width="0dp" android:gravity="center_horizontal"
                />

                <TextView
                        android:layout_marginTop="30dp"
                        android:text="Contador"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:background="@color/cuadrosTexto"
                        android:textColor="#000000"
                        android:id="@+id/título"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/textoSuperior"
                        app:layout_constraintStart_toStartOf="@id/guideline4"
                        app:layout_constraintEnd_toStartOf="@id/guideline5"
                        app:layout_constraintVertical_bias="0.0"
                        android:layout_width="0dp" android:gravity="center_horizontal"
                />

                <TextView
                        android:layout_marginTop="30dp"
                        android:text=""
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:background="@color/cuadrosTexto"
                        android:textColor="#000000"
                        android:id="@+id/títuloRestart"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/título"
                        app:layout_constraintStart_toStartOf="@id/guideline4"
                        app:layout_constraintEnd_toStartOf="@id/guideline5"
                        app:layout_constraintVertical_bias="0.0"
                        android:layout_width="0dp" android:gravity="center_horizontal"
                />

                <Button
                        android:paddingTop="10dp"
                        android:id="@+id/button"
                        android:layout_marginTop="28dp"
                        android:textSize="17sp"
                        android:textStyle="normal"
                        android:textAlignment="center"
                        android:background="@drawable/color_boton"
                        android:layout_height="50dp"
                        android:textColor="#FFFFFF"
                        android:text="Actividad 2"
                        app:layout_constraintStart_toStartOf="@id/guideline4"
                        app:layout_constraintEnd_toStartOf="@id/guideline5"
                        app:layout_constraintTop_toBottomOf="@+id/títuloRestart"
                        android:layout_width="0dp" android:gravity="center_horizontal"
                />

                <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.23"
                />

                <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.77"
                />

                <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.30"
                />

                <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.13"
                />

                <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.87"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>